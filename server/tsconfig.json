{
  "include": ["./**/*"],
  "exclude": ["node_modules", "build", "dist", "../client", "../shared", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "noEmit": false,
    "outDir": "./dist",
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"]
  }
} 