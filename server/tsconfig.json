{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "declaration": false,
    "removeComments": true,
    "stripInternal": true
  },
  "include": ["./**/*", "./types/declarations.d.ts", "./types/express.d.ts"],
  "exclude": ["node_modules", "dist"]
}