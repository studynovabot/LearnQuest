{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["./**/*", "./types/declarations.d.ts"],
  "exclude": ["node_modules", "dist"]
}