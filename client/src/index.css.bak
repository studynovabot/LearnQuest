@layer base {
  /* Apply border color to all elements */
  * {
    @apply border-[hsl(var(--border))];
  }

  /* Apply transitions to all elements except layout components */
  *:not(.sliding-sidebar):not([data-sidebar]):not(.sidebar):not(nav):not(header):not(.mobile-header):not(.mobile-nav) {
    transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 200ms;
  }

  /* Ensure layout components have no unwanted transitions - EXCEPT sidebar hover */
  [data-sidebar], nav:not(.sliding-sidebar nav), header, .mobile-header, .mobile-nav {
    transition: none !important;
  }

  /* Allow sidebar to have hover transitions */
  .sliding-sidebar {
    transition: width 300ms ease-in-out !important;
  }

  .sliding-sidebar * {
    transition: opacity 300ms ease-in-out, max-width 300ms ease-in-out, transform 300ms ease-in-out !important;
  }

  body {
    @apply bg-[hsl(var(--background))] text-[hsl(var(--foreground))] antialiased overflow-x-hidden;
    font-family: ui-sans-serif, system-ui, sans-serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol;
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  /* Premium Background System - Light Theme */
  body:not(.dark) {
    background:
      var(--bg-overlay-1),
      var(--bg-overlay-2),
      var(--bg-overlay-3),
      radial-gradient(circle at 50% 0%, rgba(59, 130, 246, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(124, 58, 237, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 20% 20%, rgba(16, 185, 129, 0.05) 0%, transparent 50%),
      hsl(var(--background));
    background-attachment: fixed;
  }

  /* Premium Background System - Dark Theme */
  body.dark {
    background:
      var(--bg-overlay-1),
      var(--bg-overlay-2),
      var(--bg-overlay-3),
      radial-gradient(circle at 50% 0%, rgba(59, 130, 246, 0.12) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(124, 58, 237, 0.12) 0%, transparent 50%),
      radial-gradient(circle at 20% 20%, rgba(16, 185, 129, 0.08) 0%, transparent 50%),
      hsl(var(--background));
    background-attachment: fixed;
  }

  /* Animated background for premium feel */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle at 25% 25%, rgba(120, 119, 198, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(255, 119, 198, 0.1) 0%, transparent 50%);
    animation: float 20s ease-in-out infinite;
    pointer-events: none;
    z-index: -1;
  }

  /* Theme Personality System - Background Patterns */
  .theme-bg-none::before {
    display: none;
  }

  .theme-bg-dots::before {
    background-image: radial-gradient(circle, rgba(var(--primary), 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
    animation: none;
  }

  .theme-bg-grid::before {
    background-image:
      linear-gradient(rgba(var(--primary), 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(var(--primary), 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
    animation: none;
  }

  .theme-bg-waves::before {
    background-image:
      radial-gradient(ellipse at top, rgba(var(--primary), 0.1) 0%, transparent 50%),
      radial-gradient(ellipse at bottom, rgba(var(--secondary), 0.1) 0%, transparent 50%);
    animation: float 15s ease-in-out infinite;
  }

  .theme-bg-particles::before {
    background-image:
      radial-gradient(circle at 20% 20%, rgba(var(--primary), 0.15) 2px, transparent 2px),
      radial-gradient(circle at 80% 80%, rgba(var(--secondary), 0.15) 1px, transparent 1px),
      radial-gradient(circle at 40% 60%, rgba(var(--accent), 0.1) 1px, transparent 1px);
    background-size: 50px 50px, 30px 30px, 70px 70px;
    animation: float 25s ease-in-out infinite;
  }

  /* Theme Personality System - Ambient Animations */
  .theme-ambient-none::before {
    animation: none !important;
  }

  .theme-ambient-subtle::before {
    animation-duration: 30s;
    animation-timing-function: ease-in-out;
  }

  .theme-ambient-gentle::before {
    animation-duration: 20s;
    animation-timing-function: ease-in-out;
  }

  .theme-ambient-active::before {
    animation-duration: 10s;
    animation-timing-function: ease-in-out;
  }

  /* Theme Personality System - Cursor Styles */
  .theme-cursor-default {
    cursor: default;
  }

  .theme-cursor-precise {
    cursor: crosshair;
  }

  .theme-cursor-creative {
    cursor: pointer;
  }

  .theme-cursor-playful {
    cursor: grab;
  }

  .theme-cursor-playful:active {
    cursor: grabbing;
  }

  /* Theme Personality System - Interaction Feedback */
  .theme-feedback-minimal button:hover,
  .theme-feedback-minimal .cursor-pointer:hover {
    transform: none;
    box-shadow: none;
  }

  .theme-feedback-standard button:hover,
  .theme-feedback-standard .cursor-pointer:hover {
    transform: translateY(-1px);
  }

  .theme-feedback-enhanced button:hover,
  .theme-feedback-enhanced .cursor-pointer:hover {
    transform: translateY(-2px) scale(1.02);
  }

  .theme-feedback-immersive button:hover,
  .theme-feedback-immersive .cursor-pointer:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: var(--shadow-premium-lg);
  }

  .theme-feedback-immersive button:active,
  .theme-feedback-immersive .cursor-pointer:active {
    transform: translateY(-1px) scale(0.98);
  }

  /* Smooth theme transitions for specific elements */
  .theme-transition {
    transition: all 200ms ease-in-out;
  }

  /* Theme transitioning state for smooth changes */
  .theme-transitioning {
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1) !important;
  }

  /* Only apply transitions to content elements, not layout components */
  .theme-transitioning .glass-card,
  .theme-transitioning .premium-card,
  .theme-transitioning .btn-premium,
  .theme-transitioning .card,
  .theme-transitioning .button {
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1) !important;
  }

  /* Protect layout components from theme transitions - EXCEPT sidebar hover */
  .theme-transitioning [data-sidebar],
  .theme-transitioning nav:not(.sliding-sidebar nav),
  .theme-transitioning header {
    transition: none !important;
  }

  /* Allow sidebar hover during theme transitions */
  .theme-transitioning .sliding-sidebar {
    transition: width 300ms ease-in-out, background-color 300ms ease-in-out !important;
  }

  /* Prevent flash of unstyled content during theme switch */
  html {
    color-scheme: light dark;
  }

  html.dark {
    color-scheme: dark;
  }

