  /* Ensure all card types are visible by default */
  .card,
.premium-card,
[class*="card"],
[class*="tile"] {
  visibility: visible !important;
  opacity: 1 !important;
  background-color: hsl(var(--card)) !important;
  color: hsl(var(--card-foreground)) !important;
  border-color: hsl(var(--border)) !important;
}

/* Dark mode specific styles for all card types */
.dark .glass-card,
.dark .glass-card-strong,
.dark .premium-card,
.dark .card,
.dark [class*="card"],
.dark [class*="tile"] {
  background-color: hsl(var(--card)) !important;
  color: hsl(var(--card-foreground)) !important;
  border-color: hsl(var(--border)) !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* Light mode specific styles for all card types */
.light .glass-card,
.light .glass-card-strong,
.light .premium-card,
.light .card,
.light [class*="card"],
.light [class*="tile"] {
  background-color: hsl(var(--card)) !important;
  color: hsl(var(--card-foreground)) !important;
  border-color: hsl(var(--border)) !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* Remove hover effect for all card/tile types */
.glass-card:hover,
.glass-card-strong:hover,
.premium-card:hover,
.card:hover,
[class*="card"]:hover,
[class*="tile"]:hover {
  background-color: hsl(var(--card)) !important;
  color: hsl(var(--card-foreground)) !important;
  border-color: hsl(var(--border)) !important;
  box-shadow: none !important;
  transform: none !important;
  opacity: 1 !important;
}

.text-gradient {
  @apply bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent;
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f5f9;
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #4f46e5 0%, #6b21a8 100%);
}

/* Selection Styling */
::selection {
  background: rgba(99, 102, 241, 0.2);
  color: #312e81;
}

/* Premium Loading States */
.skeleton {
  @apply animate-pulse bg-gradient-to-r from-gray-200 via-gray-300 to-gray-200 bg-[length:200%_100%];
  animation: shimmer 2s infinite;
}

/* Mobile Optimizations */
@media (max-width: 768px) {
  .premium-card {
    @apply rounded-xl;
  }
  
  .font-display {
    letter-spacing: -0.015em;
  }
}
